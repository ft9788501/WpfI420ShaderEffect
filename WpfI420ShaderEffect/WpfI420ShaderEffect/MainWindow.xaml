        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.Resources>
        <VisualBrush x:Key="MainBackground">
            <VisualBrush.Visual>
                <Border Background="Red" Width="480" Height="270">
